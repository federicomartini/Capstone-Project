<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:shadowColor">@color/card_title_shadow_color</item>

        <item name="android:windowEnterTransition">@transition/grid_exit</item>
        <item name="android:windowExitTransition">@transition/grid_exit</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardTitle">
        <item name="android:textColor">@color/dark_background_primary_text_color</item>
        <item name="android:shadowColor">@color/card_title_shadow_color</item>
        <item name="android:textSize">@dimen/main_card_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardSubtitle">
        <item name="android:textColor">@color/dark_background_secondary_text_color</item>
        <item name="android:shadowColor">@color/card_title_shadow_color</item>
        <item name="android:textSize">@dimen/main_card_subtitle_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardLayoutTextStyle">
        <item name="android:gravity">bottom</item>
    </style>

    <style name="EditTextBase">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextViewBase">

    </style>

    <style name="SingleLineEditText" parent="EditTextBase">
        <item name="android:singleLine">true</item>
    </style>

    <style name="SingleLineTextView" parent="TextViewBase">
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">18</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="app_bar_theme">
        <item name="android:textColorPrimary">@color/colorTextIcons</item>
    </style>

</resources>
