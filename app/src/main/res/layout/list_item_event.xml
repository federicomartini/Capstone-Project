<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_list_item_event"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_marginStart="@dimen/medium_margin_material_design"
    android:layout_marginEnd="@dimen/medium_margin_material_design"
    android:layout_marginTop="@dimen/medium_margin_material_design"
    android:layout_marginBottom="@dimen/medium_margin_material_design"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardElevation="@dimen/cardview_default_elevation">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="@string/event_transition_image"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/photo_background_protection"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="@string/event_transition_text"
            android:orientation="vertical"
            style="@style/CardLayoutTextStyle">

            <TextView
                android:id="@+id/event_title"
                style="@style/CardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medium_margin_material_design"
                android:paddingStart="@dimen/medium_margin_material_design"
                android:paddingTop="@dimen/medium_margin_material_design"
                android:paddingRight="@dimen/medium_margin_material_design"
                android:paddingEnd="@dimen/medium_margin_material_design"
                android:paddingBottom="@dimen/medium_margin_material_design"
                android:shadowDx="@integer/event_title_shadow_dx"
                android:shadowDy="@integer/event_title_shadow_dx"
                android:shadowRadius="@integer/event_title_shadow_radius"
                android:ellipsize="end"
                android:maxLines="@integer/event_title_max_lines" />

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>
