<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rowCount="@integer/guest_edit_grid_rows"
        app:columnCount="@integer/guest_edit_grid_columns"
        android:layout_margin="@dimen/medium_margin_material_design">

        <!-- ##################### Row 0 ##################### -->
        <ImageView
            android:id="@+id/guest_photo_guest_edit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/guest_photo_icon_content_description"
            app:layout_rowSpan="2"
            app:layout_row="0"
            app:layout_column="0"
            android:paddingStart="@dimen/medium_margin_material_design"
            android:paddingEnd="@dimen/medium_margin_material_design"
            android:layout_marginBottom="@dimen/medium_margin_material_design"/>

        <TextView
            android:id="@+id/guest_name_label_guest_edit_view"
            android:text="@string/guest_name_label_guest_edit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="0"
            app:layout_column="1"
            android:paddingStart="@dimen/medium_margin_material_design"
            android:paddingEnd="@dimen/medium_margin_material_design" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_view_guest_edit_view"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="@dimen/circular_image_border"
            app:civ_shadow="true"
            app:civ_shadow_radius="@integer/circular_image_shadow_radius"
            app:civ_shadow_color="@color/cardview_shadow_end_color"
            android:layout_width="@dimen/circular_image_large"
            android:layout_height="@dimen/circular_image_large"
            android:contentDescription="@string/guest_photo_icon_content_description"
            app:layout_row="0"
            app:layout_rowSpan="6"
            app:layout_column="2"
            app:layout_gravity="top|end"
            android:src="@drawable/ic_photo_camera_white_48dp"
            android:background="@color/background_white"
            android:tint="@color/colorPrimary"
            android:paddingStart="@dimen/medium_margin_material_design"
            android:paddingEnd="@dimen/medium_margin_material_design"/>


        <!-- ##################### Row 1 ##################### -->
        <EditText
            android:id="@+id/guest_name_edit_text_guest_edit_view"
            android:theme="@style/SingleLineEditText"
            android:layout_width="@dimen/text_view_width"
            android:layout_height="wrap_content"
            app:layout_row="1"
            app:layout_column="1"
            android:hint="@string/guest_name_text_hint_guest_edit_layout"
            android:paddingStart="@dimen/medium_margin_material_design"
            android:paddingEnd="@dimen/medium_margin_material_design"
            android:layout_marginBottom="@dimen/large_margin_material_design"/>


        <!-- ##################### Row 2 ##################### -->

        <TextView
            android:id="@+id/phone_label_guest_edit_view"
            android:text="@string/phone_label_guest_edit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="2"
            android:labelFor="@+id/phone_edit_text_guest_edit_view"
            app:layout_column="1"
            android:paddingStart="@dimen/medium_margin_material_design"
            android:paddingEnd="@dimen/medium_margin_material_design" />


        <!-- ##################### Row 3 ##################### -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/guest_phone_icon_content_description"
            app:layout_row="3"
            app:layout_column="0"
            android:src="@drawable/ic_phone_black_36dp"
            android:tint="@color/colorPrimary"
            android:padding="@dimen/medium_margin_material_design"
            android:layout_marginBottom="@dimen/large_margin_material_design"/>

        <EditText
            android:id="@+id/phone_edit_text_guest_edit_view"
            android:theme="@style/SingleLineEditText"
            android:layout_width="@dimen/text_view_width"
            android:layout_height="wrap_content"
            app:layout_row="3"
            app:layout_column="1"
            android:inputType="phone"
            android:paddingStart="@dimen/medium_margin_material_design"
            android:paddingEnd="@dimen/medium_margin_material_design"
            android:layout_marginBottom="@dimen/large_margin_material_design"/>

        <!-- ##################### Row 4 ##################### -->
        <TextView
            android:id="@+id/address_label_guest_edit_view"
            android:text="@string/address_label_guest_edit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="4"
            app:layout_column="1"
            android:paddingStart="@dimen/medium_margin_material_design"
            android:paddingEnd="@dimen/medium_margin_material_design" />

        <!-- ##################### Row 5 ##################### -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/guest_address_icon_content_description"
            app:layout_row="5"
            app:layout_column="0"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_map_black_36dp"
/>

        <EditText
            android:id="@+id/address_edit_text_guest_edit_view"
            android:theme="@style/SingleLineEditText"
            android:layout_width="@dimen/text_view_width"
            android:layout_height="wrap_content"
            app:layout_row="5"
            app:layout_column="1"
            android:hint="@string/guest_address_text_hint_guest_edit_layout"
            android:paddingStart="@dimen/medium_margin_material_design"
            android:paddingEnd="@dimen/medium_margin_material_design"
            android:layout_marginBottom="@dimen/large_margin_material_design"/>


    </android.support.v7.widget.GridLayout>
</android.support.v4.widget.NestedScrollView>
