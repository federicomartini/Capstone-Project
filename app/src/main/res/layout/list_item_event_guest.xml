<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/guest_list_item_event_detail_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_event_guest_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/event_guest_item_event_detail_view"
        android:layout_width="@dimen/circular_image_medium"
        android:layout_height="@dimen/circular_image_medium"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="@dimen/circular_image_border"
        app:civ_shadow="true"
        app:civ_shadow_radius="@integer/circular_image_shadow_radius_large"
        android:layout_gravity="center"
        app:civ_shadow_color="@color/cardview_shadow_end_color" />

    <TextView
        android:id="@+id/guest_list_name_text_view_event_detail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        style="@style/SingleLineTextView" />

    <TextView
        android:id="@+id/guest_note_list_text_view_event_detail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end" />


</LinearLayout>